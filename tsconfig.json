{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2021",
        "lib": [
            "ES2021"
        ],
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "incremental": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}